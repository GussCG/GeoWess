    <main id="proyectos-main">
        <h1> Proyectos </h1>
        
        <script>
            //Si es admin, contrantante puede crear proyectos
            if({{user.us_Tipo}} == 0 || {{user.us_Tipo}} == 1){
                        document.write('<a href="proyectos/crear-proyecto" id="crearP">Crear Proyecto</a>');
                    }
        </script>
        

        <div class="proyectos">
            <div class="tabla-proyectos">
                <table>
                    <thead>
                        <tr>
                            <th> Nombre</th>
                            <th> Fecha Inicio</th>
                            <th> Fecha Fin</th>
                            <th> Estatus</th>
                            <th> Costo Total</th>
                            <th> Editar </th>
                            <th> Eliminar</th>
                        </tr>                    
                    </thead>
                    <tbody>
                        <tr>
                            {{#each proyecto}}
                            <td class="proyecto-nombre"><a href="#">{{proyecto.pr_Nombre}}</a></td>
                            <td class="fec-ini"> {{proyecto.pr_FechaInicio}}</td>
                            <td class="fec-fin"> {{proyecto.pr_FechaFin}}</td>
                            <td> {{proyecto.pr_Status}}</td>
                            <td> $ {{proyecto.pr_CostoTotal}}</td>
                            <td><a href="/editar-proyecto/{{proyecto.pr_ID}}"><img src="../images/editar.png" alt="Editar Proyecto" class="edit-pr"></a></td>
                            <td><a href=""><img src="../images/delete.png" alt="Eliminar Proyecto" class="delete-pr"></a></td>                               
                            </td>
                            {{/each}}
                        </tr>                        
                    </tbody>
                </table>
            </div>
           

        </div>

    </main>