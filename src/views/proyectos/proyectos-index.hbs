    <main id="proyectos-main">
        <h1> Proyectos </h1>
        
        <script>
            //Si es admin, contrantante puede crear proyectos
            if({{user.us_Tipo}} == 0 || {{user.us_Tipo}} == 1){
                        document.write('<a href="proyectos/crear-proyecto" id="crearP">Crear Proyecto</a>');
                    }
        </script>
        

        <div class="proyectos">
            <div class="tabla-proyectos">
                <table>
                    <thead>
                        <tr>
                            <th> Nombre</th>
                            <th> Fecha Inicio</th>
                            <th> Fecha Fin</th>
                            <th> Estatus</th>
                            <th> Costo Total</th>
                            <th> Editar </th>
                            <th> Eliminar</th>
                        </tr>                    
                    </thead>
                    <tbody>
                        {{#each proyectos}}
                        <tr>
                            
                            <td class="proyecto-nombre"><a href="proyectos/ver-proyecto/{{pr_ID}}">{{pr_Nombre}}</a></td>
                            <td class="fec-ini">{{pr_FechaInicio}}</td>
                            <td class="fec-fin">{{pr_FechaFin}}</td>
                            <td>{{pr_Status}}</td>
                            <td>${{pr_CostoTotal}}</td>
                            <td><a href="/editar-proyecto/{{pr_ID}}"><img src="../images/editar.png" alt="Editar Proyecto" class="edit-pr"></a></td>
                            <td><a href="/eliminar-proyecto/{{pr_ID}}"><img src="../images/delete.png" alt="Eliminar Proyecto" class="delete-pr"></a></td>                               
                            </td>
                            
                        </tr>      
                        {{/each}}                  
                    </tbody>
                </table>
            </div>
           

        </div>

    </main>