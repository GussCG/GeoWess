<link rel="stylesheet" href="/css/message.css">

{{#if success}}
    <div class="msg-container success-msg fade-in-out" id="alert">
        <div class="msg-row">
            {{success}}
            <button type="button" class="close" id="close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{{/if}}

{{#if message}}
    <div class="msg-container error-msg fade-in-out" id="alert">
        <div class="msg-row">
            {{message}}
            <button type="button" class="close" id="close" data-bs-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
{{/if}}

<script src="/js/alerts-btn.js"></script>
